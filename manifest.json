{
  "manifest_version": 2,

  "name": "Doublespeak",
  "description": "This extension replaces political doublespeak with plain English.",
  "version": "0.1",
  "permissions": [
    "tabs", "http://*/*", "activeTab"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_title": "Modify doublespeak",
    "default_icon": {
      "19": "img/doublespeak19.png",
      "38": "img/doublespeak38.png"
    }
  }
}
